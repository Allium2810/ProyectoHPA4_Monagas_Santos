<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_actividad"

    tools:context=".opciones">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="171dp"
        android:layout_height="168dp"
        android:layout_marginStart="118dp"
        android:layout_marginTop="65dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tropical_utp_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="109dp"
        android:layout_marginTop="30dp"
        android:text="CENTRO DE VOTACIONES UTP"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/opvotar"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="256dp"
        android:layout_marginEnd="130dp"
        android:background="@drawable/borderbtn"
        android:text="Votar"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/opres"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="344dp"
        android:layout_marginEnd="130dp"
        android:background="@drawable/borderbtn"
        android:text="Ver resultados"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/opsalir"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="428dp"
        android:layout_marginEnd="130dp"
        android:background="@drawable/borderbtn"
        android:text="Salir"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>